<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">#F0F0F0</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorPureWhite</item>
        <item name="android:textColor">@color/colorPureBlack</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:fontFamily">@font/sf_pro_display</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.DividerLine">
        <item name="android:layout_height">1px</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/divider_line</item>
    </style>

    <style name="AppTheme.DividerFat">
        <item name="android:layout_height">8dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/divider_fat</item>
    </style>

    <style name="AppTheme.SectionLabel" parent="TextAppearance.AppCompat.Small">
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/md_blue_grey_700</item>
    </style>

    <style name="AppTheme.ActionButton">
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:textColor">@color/colorPureWhite</item>
        <item name="backgroundTint">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.EnableInputField" parent="AppTheme">
        <item name="android:background">@drawable/enable_input_field</item>
        <item name="android:textColor">@color/colorPureWhite</item>
        <item name="android:textColorHint">#99FFFFFF</item>
    </style>

    <style name="AppTheme.EnableInputField.DisableInput" parent="AppTheme">
        <item name="android:background">@drawable/disable_input_field</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:focusable">false</item>
    </style>


    <style name="AppTheme.SinglelineTab" parent="Base.Widget.Design.TabLayout">
        <item name="tabMaxWidth">300dp</item>
        <item name="tabIndicatorColor">@color/colorPrimary</item>
        <item name="tabMode">scrollable</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabTextAppearance">@style/AppTheme.SinglelineTab.Text</item>
        <item name="tabSelectedTextColor">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.SinglelineTab.Text" parent="TextAppearance.AppCompat.Button">
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/colorSecondaryText</item>
        <item name="textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TabLayoutTextStyle">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/_20sdp</item>
        <item name="android:fontFamily">@font/sf_pro_display_bold</item>
    </style>

    <style name="RatingBar">
        <item name="colorControlNormal">@color/colorTransparent</item>
        <item name="colorControlActivated">#FFEE04</item>
    </style>

    <style name="RatingBarOrange">
        <item name="colorControlNormal">@color/colorTransparent</item>
        <item name="colorControlActivated">#F78500</item>
    </style>

    <style name="BottomDialog" parent="AppTheme">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>

    <style name="MySeekBar" parent="Widget.AppCompat.SeekBar">
        <item name="android:progressBackgroundTint">#54FFFFFF</item>
        <item name="android:progressTint">@color/colorPrimary</item>
        <item name="android:colorControlActivated">@color/colorPrimary</item>
        <item name="android:thumbTint">@color/colorPrimary</item>
    </style>
</resources>
